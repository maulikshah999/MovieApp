<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offWhite"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MovieDetailActivity"
    tools:showIn="@layout/activity_movie_detail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtMovieTitleDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm_5dp"
                android:layout_marginTop="@dimen/dm_10dp"
                android:text="@string/txt_movie_title"
                android:textAlignment="center"
                android:textSize="@dimen/dm_25dp"
                android:textStyle="bold|italic" />

            <!-- Rating/ Popularity here -->

            <TextView
                android:id="@+id/txtRatingDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm_5dp"
                android:layout_marginTop="@dimen/dm_10dp"
                android:padding="@dimen/dm_10dp"
                android:text="@string/txt_movie_rating"
                android:textAlignment="center"
                android:textSize="@dimen/dm_15dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtDetailsPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm_5dp"
                android:layout_marginTop="@dimen/dm_10dp"
                android:text="@string/title_movie_detail"
                android:textAlignment="center"
                android:textSize="@dimen/dm_15dp" />

            <TextView
                android:id="@+id/txtReleaseDateDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm_5dp"
                android:layout_marginTop="@dimen/dm_10dp"
                android:text="@string/txt_release_date"
                android:textAlignment="center"
                android:textSize="@dimen/dm_15dp" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>
