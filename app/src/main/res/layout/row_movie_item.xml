<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dm_5dp"
        android:elevation="@dimen/dm_3dp"
        app:cardCornerRadius="@dimen/dm_0dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgMovieBannerRow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_height_150dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerCrop" />


        <TextView
            android:id="@+id/txtMovieTitleRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dm_10dp"
            android:paddingRight="@dimen/dm_10dp"
            android:paddingTop="@dimen/dm_10dp"
            android:textColor="@color/light_black"
            android:layout_below="@+id/imgMovieBannerRow"
            android:textSize="@dimen/dm_15dp"
            />

        <TextView
            android:id="@+id/txtPopulartiyRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dm_10dp"
            android:paddingRight="@dimen/dm_10dp"
            android:paddingTop="@dimen/dm_5dp"
            android:layout_below="@+id/txtMovieTitleRow"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/dm_10dp"
            />

    </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
